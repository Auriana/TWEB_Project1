#chatDisplay
  height 400px
  overflow auto

canvas#the-canvas
  border 1px solid #525252
  max-width 100%

#no_pages
  display block
  float right

.clearer
  clear both

.color-bloc
  background-color #1ABD7C
  border-radius 8px
  padding 20px

.color-bloc-log
  background-color #1ABD7C
  border-radius 8px

h2
  font-size 26px !important

h3.chat
  color #000
  margin-top 12px

.black-button
  color #fff
  background-color #000
  border-radius 6px
  display block
  border none
  margin 5px
  padding 5px 15px

a.black-button
  display inline-block !important
  color #fff !important
  text-decoration none !important

a.black-button:hover
  background-color #000
  color #1ABD7C !importamt

.inline
  display inline !important

.centred
  margin-left auto
  margin-right auto
  float none

a
  color #000!important

a.text-link
  color #333
  text-decoration underline

a.text-link:hover
  color #fff

.btn-sub
  float right
  margin 0 0 0 10px
  border-bottom-left-radius 6px !important
  border-top-left-radius 6px !important

.no-margin
  margin-top 0!important

.dimmi
  padding-top 30px
  padding-bottom 23px

.dimmi-log
  background-color #1ABD7C
  color #000000 !important
  font-weight bold

#chatDisplay
  max-height 200px !important

#chatDisplay ul
  padding-left 0

