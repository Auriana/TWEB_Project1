div(ng-include='"components/navbar/navbar.html"')
.container
  button.btn.btn-default.btn-lg.black-button.float-right(type='button', value='exit', ng-click="exit()") Exit the lecture
  .row
    .col-md-9
      h1.page-header {{titlePresentation}}
      .div
        span
        | Page:
        span#page_num
        | /
        span#page_count
      .clearer
      canvas#the-canvas

    .col-md-3.big-top-margin
      .col-md-12.color-bloc
        h3.no-margin.chat My requests
        button.btn.btn-default.black-button(type='button', value='slow_down', ng-click="slowBut()") Slow down
        button.btn.btn-default.black-button(type='button', value='louder', ng-click="loudBut()") Louder, please
        button.btn.btn-default.black-button(type='button', value='lost', ng-click="lostBut()") I'm lost
        button.btn.btn-default.black-button(type='button', value='interesting', ng-click="inteBut()") Interesting
        form
          .form-group
            label(for='inputChat') 
              h3.chat My input
            textarea.form-control(type='textarea', placeholder='Enter your message', ng-model='inputChat')
          button.btn.btn-default.black-button.btn-sub(type='submit', ng-click='send()') Send  
        .clearer
        h3.chat Audience live
        #chatDisplay
          ul.chat-box
            li(ng-repeat='thing in listeMsg', ng-init='scroll()')
              b
                {{thing.time}}
                | - Slide 
                {{thing.numSlide}}
              | : {{thing.name}}
