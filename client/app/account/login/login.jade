div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-3.color-bloc.centred
      h1.no-margin Log in
      form.form(name='form', ng-submit='login(form)', novalidate='')
        .form-group
          label Email
          input.form-control(type='text', name='email', ng-model='user.email', placeholder='email')
        .form-group
          label(type='hidden') Password
          input.form-control(type='password', name='password', ng-model='user.password', placeholder='password')

        .form-group.has-error
          p.help-block(ng-show='form.email.$error.required && form.password.$error.required && submitted')
            | Please enter your email and password.
          p.help-block {{ errors.other }}

        div
          button.btn.btn-inverse.btn-lg.btn-login.black-button.btn-sub(type='submit')
            | Go!
        = ' '
          .clearer
          a(href='/signup')
            | Or sign up here
