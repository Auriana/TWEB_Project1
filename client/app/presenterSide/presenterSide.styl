#chatDisplay
  height 400px
  overflow auto

canvas#the-canvas
  border 1px solid #525252
  max-width 653px

#no_pages
  display block
  float right

.clearer
  clear both

.color-bloc
  background-color #1ABD7C
  border-radius 8px
  padding 20px

.color-bloc-log
  background-color #1ABD7C
  border-radius 8px

h2
  font-size 26px !important

.black-button
  font-weight 300
  display inline-block !important
  color #fff !important
  text-decoration none !important
  background-color #000
  border-radius 6px
  display block
  border none
  margin 5px
  padding 5px 15px

.black-button:hover
  background-color #000!important
  color #1ABD7C !important

.inline
  display inline !important

.centred
  margin-left auto
  margin-right auto
  float none

a
  color #000 !important
  text-decoration underline

a:hover
  color #fff

.btn-sub
  float right
  margin 0 0 0 10px
  border-bottom-left-radius 6px !important
  border-top-left-radius 6px !important

.no-margin
  margin-top 0

.dimmi
  padding-top 30px
  padding-bottom 23px

.dimmi-log
  background-color #1ABD7C
  color #000000 !important
  font-weight bold

#chatDisplay
  max-height 220px !important

#chatDisplay ul
  border 1px solid #525252
  padding-left 0

#chatDisplay ul li
  &:nth-child(odd)
    background-color #eee
  list-style none
  padding 3px

.big-top-margin
  margin-top 130px

li#admin-link
  color #fff !important